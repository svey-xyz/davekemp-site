{#
	Menu block separated from header for legibility
#}

<div id="menu-container" class="fixed z-40 min-w-full min-h-full pointer-events-none invisible
	after:absolute after:inset-0 after:bg-secondary-bg after:transition-opacity after:duration-300 after:opacity-0 after:-z-1">

	<div id="menu" class="flex h-screen md:h-auto transition-opacity duration-200 opacity-0 z-10">
		<div class="transition-all duration-500 flex flex-col md:justify-center z-10 w-full overflow-hidden md:flex-row">

			{# RIGHT SIDE WRAPPER #}
			<div class="relative transition-spacing duration-500 flex flex-col py-6 bg-secondary-bg w-full
				after:absolute after:left-0 after:right-0 after:bottom-0 after:mt-0.5 after:h-0.5 after:bg-primary-border">
				{# NAVIGATION CONTAINER #}
				<div class="relative flex w-screen main-padding h-full flex-col md:flex-row flex-wrap space-between">
					{% for navItem in site.navigation.primaryNavigation %}
						{% set navLink %}
							{% if navItem.slug == site.navigation.homePageSlug %}
								''
							{% else %}
								{{ navItem.slug }}
							{% endif%}
						{% endset %}
						<div class="relative md:inline-block group py-4 pr-16">
							<h6 class="relative z-10"><a href="/{{ navLink | slug }}" class="relative z-10 duration-200
								text-primary-text rounded-md
								group-hover:text-primary-bg">
								{{ navItem.title }}
							</a></h6>
						</div>	
					{% endfor %}
					<div class="w-full z-10">
						{% include ("layouts/components/footers/footer-content.njk") %}
					</div>
				</div>
			</div>
		</div>
	</div>
</div>